{
  "mcpServers": {
    "math-memory": {
      "command": "node",
      "args": ["C:\\palantir\\math\\mcp-servers\\memory-server.js"],
      "env": {
        "MEMORY_DB_PATH": "C:\\palantir\\math\\mcp-memory\\memory.db",
        "VECTOR_STORE_PATH": "C:\\palantir\\math\\mcp-memory\\vectors",
        "EMBEDDING_MODEL": "text-embedding-ada-002",
        "MAX_MEMORY_SIZE": "10GB",
        "CLEANUP_INTERVAL": "86400000",
        "IMPORTANCE_THRESHOLD": "0.3"
      }
    },
    "math-thread-continuity": {
      "command": "node",
      "args": ["C:\\palantir\\math\\mcp-servers\\continuity-server.js"],
      "env": {
        "PROJECT_PATH": "C:\\palantir\\math",
        "CHECKPOINT_PATH": "C:\\palantir\\math\\mcp-continuity\\checkpoints",
        "AUTO_SAVE_INTERVAL": "10",
        "MAX_CONTEXT_SIZE": "100000",
        "COMPRESSION_ENABLED": "true",
        "TRANSITION_THRESHOLD": "90000"
      }
    },
    "math-knowledge-graph": {
      "command": "node",
      "args": ["C:\\palantir\\math\\mcp-servers\\knowledge-graph-server.js"],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USER": "neo4j",
        "NEO4J_PASSWORD": "password",
        "GRAPH_NAME": "math-education",
        "ENABLE_CACHING": "true"
      }
    },
    "math-filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "C:\\palantir\\math"],
      "env": {
        "ALLOWED_DIRECTORIES": "C:\\palantir\\math",
        "WATCH_ENABLED": "true"
      }
    },
    "math-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-search"],
      "env": {
        "SEARCH_PATHS": "C:\\palantir\\math",
        "INDEX_UPDATE_INTERVAL": "300000"
      }
    }
  },
  "globalSettings": {
    "telemetry": false,
    "debugMode": true,
    "logLevel": "info",
    "maxConcurrentServers": 5
  },
  "projectSettings": {
    "mathLearningPlatform": {
      "enabledServers": [
        "math-memory",
        "math-thread-continuity",
        "math-knowledge-graph",
        "math-filesystem",
        "math-search"
      ],
      "autoStartServers": true,
      "memorySettings": {
        "studentProfiles": true,
        "problemPatterns": true,
        "learningPaths": true,
        "collaborativeMemory": true
      },
      "continuitySettings": {
        "autoCheckpoint": true,
        "checkpointTriggers": [
          "file_save",
          "milestone_reached",
          "error_detected",
          "session_end"
        ],
        "compressionLevel": "high",
        "retentionDays": 90
      }
    }
  }
}